<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"

    android:background="@android:color/white"
    tools:context="in8443.httpsboxinall.biaattendence.MainActivity5_customAttendenceRecord">



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/login_button"
                android:id="@+id/button8" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="To"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_button"
                android:id="@+id/button9"
                android:layout_below="@+id/button8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:text="Select date"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginTop="15dp"
                android:layout_alignTop="@+id/button8"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:text="Select date"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginBottom="15dp"
                android:layout_alignBottom="@+id/button9"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignStart="@+id/textView7" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:background="@android:color/white"

                android:src="@drawable/date_interchange"
                android:layout_above="@+id/textView8"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:background="@drawable/login_button"
                android:padding="20dp"
                android:elevation="5dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_done_black_24dp"
                android:layout_alignBottom="@+id/textView8"
                android:layout_alignRight="@+id/expandableListView"
                android:layout_alignEnd="@+id/expandableListView" />

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:id="@+id/expandableListView"
        android:layout_below="@+id/button9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
